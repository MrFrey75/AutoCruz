<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AutoCruz.Ui.ViewModels"
        mc:Ignorable="d"
        x:Class="AutoCruz.Ui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="AutoCruz"
        Width="960"
        Height="540"
        Background="Black">

    <Border BorderBrush="#ccc" BorderThickness="4" CornerRadius="6" Margin="4">
        <Viewbox Stretch="Uniform">
            <Grid Width="960" Height="540" RowDefinitions="100,*,100">

                <!-- Top Bar -->
                <Border Background="Red" Height="100" Padding="20">
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                        <!-- Left: Static Title -->
                        <TextBlock Text="TITLE"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>

                        <!-- Middle: Sample Text Binding -->
                        <TextBlock Text="{Binding Greeting}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Grid.Column="1"/>

                        <!-- Right: Current Date & Time -->
                        <TextBlock Text="{Binding Clock}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Grid.Column="2"/>
                    </Grid>
                </Border>


                <!-- Main Plugin Content -->
                <ScrollViewer Grid.Row="1" Margin="20">
                    <StackPanel>
                        <ItemsControl Items="{Binding Plugins}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5">
                                        <ContentControl Content="{Binding View}" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Show if Plugins is empty -->
                        <TextBlock Text="No plugins loaded." 
                                   Foreground="White"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"
                                   Margin="20"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Navigation Bar -->
                <Border Grid.Row="2" Background="Green" Padding="20">
                    <TextBlock Text="Navigation Bar (Coming Soon)"
                               FontStyle="Italic"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

            </Grid>
        </Viewbox>
    </Border>
</Window>
