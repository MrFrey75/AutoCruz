{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "AutoCruz": "Information",
      "Core": "Information",
      "Hardware": "Information",
      "HeadUnit": "Warning"
    },
    "Console": {
      "IncludeScopes": false
    },
    "File": {
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 52428800
    }
  },
  "AutoCruz": {
    "Environment": "Production",
    "EnableHardware": true,
    "EnablePlugins": true,
    "StartupTimeout": "00:01:00",
    "ShutdownTimeout": "00:00:15",
    "Display": {
      "Width": 1280,
      "Height": 720,
      "Fullscreen": true,
      "AlwaysOnTop": true,
      "Brightness": 75,
      "NightMode": false,
      "AutoNightMode": true,
      "ScreenSaverTimeout": "00:02:00"
    },
    "Performance": {
      "EnableGPUAcceleration": true,
      "MaxMemoryUsage": 512,
      "EnableCaching": true,
      "CacheSize": 200,
      "GCMode": "Server"
    },
    "Security": {
      "EnableSafeMode": true,
      "AllowSystemAccess": false,
      "RequireAuthentication": false,
      "SessionTimeout": "02:00:00"
    }
  },
  "Hardware": {
    "CanBus": {
      "Enabled": true,
      "Interface": "can0",
      "Bitrate": 500000,
      "RetryCount": 5,
      "TimeoutMs": 3000
    },
    "GPIO": {
      "Enabled": true,
      "PowerButton": 18,
      "StatusLED": 24,
      "BacklightControl": 12,
      "FanControl": 16
    },
    "Audio": {
      "InputDevice": "hw:0,0",
      "OutputDevice": "hw:0,0",
      "EnableMicrophone": true
    },
    "Bluetooth": {
      "Enabled": true,
      "Discoverable": false,
      "AutoConnect": true
    }
  },
  "SystemMonitoring": {
    "MonitoringInterval": 30000,
    "LogPerformanceData": false,
    "Alerts": {
      "CPUThreshold": 85,
      "MemoryThreshold": 90,
      "TemperatureThreshold": 80
    }
  },
  "HealthChecks": {
    "CheckInterval": "00:05:00",
    "FailureThreshold": 5
  },
  "Storage": {
    "DataRetentionDays": 7,
    "AutoCleanup": true,
    "BackupEnabled": true,
    "BackupInterval": "24:00:00"
  },
  "Development": {
    "EnableDebugMode": false,
    "EnableHotReload": false,
    "MockHardware": false,
    "EnablePerformanceCounters": false
  }
}