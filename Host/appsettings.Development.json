{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "AutoCruz": "Debug",
      "Core": "Debug",
      "Hardware": "Debug",
      "HeadUnit": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss.fff "
    }
  },
  "AutoCruz": {
    "Environment": "Development",
    "EnableHardware": false,
    "EnablePlugins": true,
    "Display": {
      "Width": 1280,
      "Height": 720,
      "Fullscreen": false,
      "AlwaysOnTop": false,
      "Brightness": 100,
      "NightMode": false,
      "AutoNightMode": false
    },
    "Performance": {
      "EnableGPUAcceleration": false,
      "MaxMemoryUsage": 1024,
      "EnableCaching": false,
      "GCMode": "Workstation"
    },
    "Security": {
      "EnableSafeMode": false,
      "AllowSystemAccess": true,
      "RequireAuthentication": false
    }
  },
  "Hardware": {
    "CanBus": {
      "Enabled": false
    },
    "GPIO": {
      "Enabled": false
    },
    "Audio": {
      "InputDevice": "default",
      "OutputDevice": "default"
    },
    "Bluetooth": {
      "Enabled": false
    }
  },
  "Development": {
    "EnableDebugMode": true,
    "EnableHotReload": true,
    "MockHardware": true,
    "EnablePerformanceCounters": true,
    "LogLevel": "Debug"
  },
  "SystemMonitoring": {
    "MonitoringInterval": 10000,
    "LogPerformanceData": true
  }
}